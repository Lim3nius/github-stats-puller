# GitHub API Configuration
GITHUB_TOKEN=your_github_token_here

# Logging Configuration
LOG_LEVEL=INFO

# Event Storage Configuration
SAVE_EVENTS_TO_FILES=true
EVENTS_DIRECTORY=downloaded-events

# Database Configuration
# Options: memory, clickhouse
DATABASE_BACKEND=memory

# ClickHouse Configuration (only used if DATABASE_BACKEND=clickhouse)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=github_user
CLICKHOUSE_PASSWORD=github_pass
CLICKHOUSE_DATABASE=github_stats